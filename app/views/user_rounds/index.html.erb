<h1>Current Round</h1>

<table class="basic-table" style="width:100%">
    <tr>
      <th>name</th>
      <th>Round ID</th>
      <th>Holes Won</th>
      <th>Closest To </th>
      <th>Longest drive</th>
      <th>splits</th>
      <th>score</th>
      <th>Created At</th>


    </tr>
    <% @current_round.each do |player_in_round| %>
        <tr>
          <td><%= player_in_round.user.name  %></td>
          <td><%= player_in_round.round.id %></td>
          <td><%= player_in_round.holes_won %></td>
          <td><%= player_in_round.kp_won %></td>
          <td><%= player_in_round.ld_won %></td>
          <td><%= player_in_round.splits %></td>
          <td><%= player_in_round.score %></td>
          <td><%= player_in_round.created_at %></td>
        </tr>
    <% end %>
</table>


 


