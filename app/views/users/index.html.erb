
<h1>All Users</h1>
<a href="/rounds"> ROUNDS </a> <br>
<a href="/user_rounds"> USERRounds </a>
<table class="basic-table">

<tr>
  <th>Id</th>
  <th>Name</th>
  <th>View</th>
</tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.id%></td>
    <td><%= user.name.capitalize%></td>
    <td><a href="/users/<%=user.id%>"><button class="btn" ><%=user.name.capitalize%>'s Rounds</button></a></td>
  </tr>
  <% end %>
</table>
<h3>Create User</h3>
 <div class="row">
  <div class="users-input">
    <%= form_with(model: @user, local: true) do |f| %>
    <%= f.label :name %> <br>
    <%= f.text_field :name, class: 'form-control' %><br>
    <%= f.label :email %><br>
    <%= f.email_field :email, class: 'form-control' %><br>
    <%= f.label :password %><br>
    <%= f.password_field :password, class: 'form-control' %><br>
    <%= f.label :password_confirmation, "Confirmation" %><br>
    <%= f.password_field :password_confirmation, class: 'form-control' %><br><br>
    <%= f.submit "Create my account", class: " btn-user" %>
      
  <% end %>
  </div>
</div>