    <% @user_rounds.each do |round| %>
        <tr>
          <td><%= round.round_id %></td>
          <td><%= round.user.name %></td>
          <td><%= round.round.course %></td>
          <td><%= round.holes_won %></td>
          <td><%= round.ld_won %></td>
          <td><%= round.kp_won %></td>
