<div class="spacer">
  <div class="page-title-section">
    <h1 class="page-main-title">Golfers</h1>
    <p class="page-subtitle"><%= @users.count %> player<%= @users.count != 1 ? 's' : '' %> registered</p>
  </div>

  <div class="users-grid">
    <% @users.each do |user| %>
      <a href="/users/<%= user.id %>" class="user-card">
        <div class="user-avatar">
          <%= user.name[0].upcase %>
        </div>
        <div class="user-info">
          <h3 class="user-name"><%= user.name.capitalize %></h3>
          <span class="user-rounds-count"><%= user.user_rounds.count %> rounds played</span>
        </div>
        <div class="user-arrow">â†’</div>
      </a>
    <% end %>
  </div>
</div> 